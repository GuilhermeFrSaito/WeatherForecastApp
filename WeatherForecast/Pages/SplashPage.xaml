<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherForecast.Pages.SplashPage"
             Title="">
    <VerticalStackLayout>
        <Image x:Name="SplashCloudy" Source="{StaticResource SplashCloudy}" Aspect="AspectFit" HeightRequest="150" Opacity="0"/>
        <Image x:Name="SplashDayCloudy" Source="{StaticResource SplashDayCloudy}" Aspect="AspectFit" HeightRequest="150" Opacity="0"/>
        <Image x:Name="SplashSunny" Source="{StaticResource SplashSunny}" Aspect="AspectFit" HeightRequest="150" Opacity="0"/>
    </VerticalStackLayout>
</ContentPage>