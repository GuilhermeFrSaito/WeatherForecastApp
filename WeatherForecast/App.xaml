<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherForecast"
             x:Class="WeatherForecast.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Image resources App Wide -->
                <x:String x:Key="SplashCloudy">wi_cloudy.png</x:String>
                <x:String x:Key="SplashDayCloudy">wi_day_cloudy.png</x:String>
                <x:String x:Key="SplashSunny">wi_day_sunny.png</x:String>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
